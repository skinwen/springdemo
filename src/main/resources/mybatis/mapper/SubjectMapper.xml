<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="wt.model.dao.SubjectDao" >
  <sql id="allColumn">
    id id,
    subject_name subjectName,
    crt_dat crtDat,
    upt_dat uptDat
  </sql>

  <insert id="insert" parameterType="wt.model.po.Subject" useGeneratedKeys="true" keyProperty="id">
    insert into subject (subject_name)
    values (#{subjectName,jdbcType=VARCHAR})
  </insert>

  <select id="findAll" resultType="wt.model.po.Subject">
    SELECT <include refid="allColumn"/>
    FROM subject
  </select>

</mapper>